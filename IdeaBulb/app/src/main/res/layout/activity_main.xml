<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rajendra.ideabulb.MainActivity">

    <ImageView
        android:id="@+id/bluebulb"
        android:layout_width="358dp"
        android:layout_height="293dp"
        android:alpha="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/bulbblue"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="34dp" />

    <ImageView
        android:id="@+id/greenbulb"
        android:layout_width="358dp"
        android:layout_height="293dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/bulbgreen"
        tools:layout_editor_absoluteY="34dp" />

    <Button
        android:id="@+id/bluebutton"
        android:layout_width="138dp"
        android:layout_height="52dp"
        android:onClick="blueTapped"
        android:text="Blue"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/greenbutton"
        android:layout_width="132dp"
        android:layout_height="54dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:onClick="greenTapped"
        android:text="Green"
        app:layout_constraintHorizontal_bias="0.902"
        app:layout_constraintLeft_toRightOf="@+id/bluebutton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp" />
</android.support.constraint.ConstraintLayout>
